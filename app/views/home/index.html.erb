
<!-- Hero section -->
<div class="bg-teal-800 relative isolate overflow-hidden">
  <div class="text-right mt-10 mr-10">
    <%= 
      link_to(
        "Sign in", 
        new_user_session_path, 
        class: 'text-lg font-semibold leading-6 text-white bg-teal-900 hover:bg-teal-700 px-4 py-2 rounded-sm', 
        data: { turbo: false }
      )
    %>
  </div>
  <div class="absolute left-[calc(50%-4rem)] top-10 -z-10 transform-gpu blur-3xl sm:left-[calc(50%-18rem)] lg:left-48 lg:top-[calc(50%-30rem)] xl:left-[calc(50%-24rem)]" aria-hidden="true">
    <div class="aspect-1108/632 w-[69.25rem] bg-linear-to-r from-[#80caff] to-[#4f46e5] opacity-20" style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)"></div>
  </div>
  <div class="mx-auto max-w-7xl px-6 pb-16 pt-8 sm:pb-16 lg:flex lg:px-8 lg:pt-40">
    <div class="mx-auto max-w-2xl shrink-0 lg:mx-0 lg:max-w-xl lg:pt-8">
      <%= landing_pages_h1 %>
      <p class="mt-6 text-lg leading-8 text-gray-300">Tackle the toughest challenges with <%= current_theme_display_name %>, the Tool for Systemic Change. Create lasting solutions through evidence-based planning and collaboration.</p>
      <div class="mt-10 flex items-center gap-x-6">
        <%= link_to new_user_session_path, class: 'text-sm font-semibold leading-6 text-white', data: { turbo: false } do %>
          Already have an account? <span class="text-yellow-400">Sign in <span aria-hidden="true">→</span></span>
        <% end %>
      </div>
      <div class="mt-10 flex items-center gap-x-6">
        <%= link_to new_contact_path, class: 'text-sm font-semibold leading-6 text-white', data: { turbo: false } do %>
          Interested to find out more? <span class="text-yellow-400">Get in touch <span aria-hidden="true">→</span></span>
        <% end %>
      </div>
    </div>
    <div class="mx-auto mt-16 flex max-w-2xl sm:mt-24 lg:ml-10 lg:mr-0 lg:mt-0 lg:max-w-none lg:flex-none xl:ml-32">
      <div class="max-w-3xl flex-none sm:max-w-5xl lg:max-w-none">
        <%= image_tag 'nodes.png', class: "w-[56rem] rounded-md bg-white/5 shadow-2xl ring-1 ring-white/10", title: 'Application screenshot' %>
      </div>
    </div>
  </div>
</div>



<!-- Feature section -->
