<%= simple_form_for(@user, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <%= form_header(@user) %>
    </div>
    <div class='box-body'>
      <%= f.input :email, required: false, readonly: true %>
      <%= f.input :name, readonly: true %>
      <hr>
      <%= f.input :system_role, as: :string, readonly: true %>
      <div class="row">
        <label class="col-sm-3 col-form-label">Account Roles</label> 
        <div class="col-md-9">
          <%= f.simple_fields_for :accounts_users do |a| %>
          <div class="box box-solid">   
            <div class="box-body"> 
              <div class="col-md-9">
                <%= a.input :account_name, readonly: true %>
                <%= a.input :account_role, readonly: true, label_method: :to_label %>
              </div>
            </div>
          </div>
          <%- end %>
        </div>  
      </div>
      <hr> 
      <%= f.input :created_at, as: :string, readonly: true %>
      <%= f.input :updated_at, as: :string, readonly: true %>
      <%= f.input :last_sign_in_at, as: :string, readonly: true %>
    </div>
    <%- if policy(@user).edit? %>
      <div class='box-footer'>
        <%= link_to 'Edit User', edit_system_user_path(@user), class: 'btn btn-primary float-right' %> 
      </div>
    <%- end %>
  </div>
<% end %>
