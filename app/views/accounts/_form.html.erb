<%= simple_form_for(@account, role: 'form', html: { class: 'form-horizontal record-form' }) do |f| %>
  <%= f.error_notification %>
  <%= form_header(@account) %>
  <%= f.input :name %>
  <%= f.input :description , as: :text, input_html: { class: 'textarea' } %>
  <%= f.input :welcome_message , as: :text, input_html: { class: 'textarea' } %>
  <%- if policy(@account).update_protected_attributes? %>
    <%= f.input :expires_on, :as => :string, input_html: { data: { behaviour: "datepicker" }} %>
    <%= f.input :expiry_warning_sent_on, as: :string, readonly: true %>
    <%= f.input :max_users %>
    <%= f.input :max_scorecards, label: "Max #{Scorecard.model_name.human.pluralize.downcase}" %>
    <div class="row">
      <div class="col-sm-3 col-form-label optional">
        <label>Solution Ecosystem Map?</label>
      </div>
      <div class="icheck-primary col-sm-9 mt-1">
        <label class="">
          <%= f.input :solution_ecosystem_maps, as: :boolean, label: false %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 col-form-label optional">
        <label>Allow Transition Cards?</label>
      </div>
      <div class="icheck-primary col-sm-9 mt-1">
        <label class="">
          <%= f.input :allow_transition_cards, as: :boolean, label: false %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 col-form-label optional">
        <label>Allow SDG Goal Alignment Cards?</label>
      </div>
      <div class="icheck-primary col-sm-9 mt-1">
        <label class="">
          <%= f.input :allow_sustainable_development_goal_alignment_cards, as: :boolean, label: false %>
        </label>
      </div>
    </div>

    <hr>

    <%= f.input :transition_card_model_name %>
    <%= f.input :transition_card_focus_area_group_model_name %>
    <%= f.input :transition_card_focus_area_model_name %>
    <%= f.input :transition_card_characteristic_model_name %>
    <%= f.input :sdgs_alignment_card_model_name %>
    <%= f.input :sdgs_alignment_card_focus_area_group_model_name %>
    <%= f.input :sdgs_alignment_card_focus_area_model_name %>
    <%= f.input :sdgs_alignment_card_characteristic_model_name %>

  <%- end %>


  <%= render_form_button(f) %>
<% end %>



