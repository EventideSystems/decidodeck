<%= simple_form_for(@account, role: 'form', html: { class: 'form-horizontal record-form' }) do |f| %>
  <%= form_header(@account) %>
  <%= f.input :name, required: false, readonly: true %>
  <%= f.input :description , as: :text, input_html: { class: 'textarea' }, readonly: true %>
  <%= f.input :welcome_message , as: :text, input_html: { class: 'textarea' }, readonly: true %>
  <%= f.input :expires_on, as: :string, readonly: true %>
  <%= f.input :max_users, readonly: true %>
  <%= f.input :max_scorecards, readonly: true, label: "Max #{Scorecard.model_name.human.pluralize.downcase}" %>
  <%= edit_button('Edit Account', edit_account_path(@account)) if policy(@account).edit? %> 
<% end %>

