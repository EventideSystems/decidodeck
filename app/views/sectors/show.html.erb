<%= simple_form_for(@sector, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <%= form_header(@sector) %>
    </div>
    <div class='box-body'>
      <%= f.input :name, readonly: true, required: false %>
      <%= f.input :description , as: :text, input_html: { class: 'textarea' }, readonly: true %>
      <hr>
      <%= f.input :created_at, as: :string, readonly: true %>
      <%= f.input :updated_at, as: :string, readonly: true %>
    </div>
    <%- if policy(@sector).edit? %>
      <div class='box-footer'>
        <%- if @sector.system_sector? %>
          <%= link_to 'Edit sector', edit_system_sector_path(@sector), class: 'btn btn-primary float-right' %>
        <%- else %>
          <%= link_to 'Edit sector', edit_sector_path(@sector), class: 'btn btn-primary float-right' %>
        <%- end %>
      </div>
    <%- end %>
  </div>
<% end %>
