<%= simple_form_for(@sector, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@sector) %></h3>
    </div>
    <div class='box-body'>
      <%= f.input :name, readonly: true, required: false %>
      <%= f.input :description , as: :text, input_html: { class: 'textarea' }, readonly: true %>
      <hr> 
      <%= f.input :created_at, as: :string, readonly: true %>
      <%= f.input :updated_at, as: :string, readonly: true %>
    </div>
    <%- if policy(@sector).edit? %>
      <div class='box-footer'>
        <%= link_to 'Edit sector', edit_sector_path(@sector), class: 'btn btn-primary pull-right' %> 
      </div>
    <%- end %>
  </div>
<% end %>