<li>
  <%= horizontal_rule %>
  <div class="flex items-center justify-between">
    <div class="flex gap-6 py-6">
      <%= render partial: 'resource_summary', locals: { name: impact_card.name, background_color: 'bg-cyan-600' } %>
      <div class="space-y-1.5">
        <div class="text-base/6 font-semibold dark:text-white">
          <%= link_to highlight(impact_card.name, params.dig(:q, :name_or_description_cont)), impact_card_path(impact_card), data: { turbo: false } %>
        </div>
        <div class="text-xs/6 text-zinc-500 min-h-4">
          <%= highlight(impact_card.description, params.dig(:q, :name_or_description_cont)) %>
        </div>

        <div class="flex space-x-2">
          <%= render 'impact_card_type_badge', impact_card: impact_card %>
          <%= render 'label_badge', label: impact_card.community if impact_card.community.present? %>
          <%= render 'label_badge', label: impact_card.wicked_problem if impact_card.wicked_problem.present? %>
        </div>

      </div>
    </div>
  </div>
</li>

