<div class="mx-auto max-w-6xl">
  <%= form_with model: @impact_card, url: impact_cards_path, scope: :impact_card, class: 'mx-auto max-w-4xl' do |form| %>
    <%= render 'form_header', title: 'New Impact Card - Initial Setup' %>
    <%= render 'form_body' do %>
      <%= render 'section', first_section: true do %>
        <%= render 'section_header', title: 'Overview', subtitle: 'General settings this impact card.' %>
        <%= render 'section_body' do %>
          <div class="sm:col-span-4">
            <%= form.label :name %>
            <div class="mt-2">
              <%= form.text_field(:name, placeholder: 'Card name', autofocus: true, required: true) %>
            </div>
          </div>

          <div class="col-span-full">
            <%= form.label :description %>
            <div class="mt-2">
              <%= form.text_area :description, rows: 3, placeholder: '' %>
            </div>
            <p class="text-sm/6 text-gray-600">A brief description of the impact card (optional).</p>
          </div>
        <% end %>
      <% end %>

      <%= render 'section' do %>
        <%= render 'section_header', title: 'Data Collection', subtitle: 'Choose a data model to track activity.' %>
        <%= render 'section_body' do %>
          <div class="sm:col-span-4">
            <%= form.label :type, 'Data model' %>
            <div class="mt-2">
              <%= form.select :type, [TransitionCard, SustainableDevelopmentGoalAlignmentCard].map { |type| [type.name.titleize, type.name] } %>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if current_account.scorecards.count.positive? %>
        <%= render 'section' do %>
          <%= render 'section_header', title: 'Import Initiatives', subtitle: 'Copy initiatives from another impact card.' do %>
            <p class="mt-1 text-sm/6 text-gray-600">
              Note: this is a completely optional step, allowing you to quickly set up an impact card by copying the structure of an existing one.
            </p>
          <% end %>
          <%= render 'section_body' do %>
            <div class="sm:col-span-4">
              <%= form.label :impact_card_source, 'Impact Card Source' %>
              <div class="mt-2">
                <%=
                  custom_select_tag(
                    :impact_card_source_id,
                    options_from_collection_for_select(policy_scope(Scorecard), :id, :name),
                    include_blank: 'Select an impact card'
                  )
                 %>
              </div>
              <p class="text-sm/6 text-gray-600 mt-1">Impact card to use as a template for initiatives (optional).</p>
            </div>
          <% end %>
        <% end %>
      <% end %>

      <%= form.fields_for :initiatives do |initiatives_form| %>
        <%= render 'section' do %>
          <%= render 'section_header', title: 'First Initiative', subtitle: 'Create your first initiative.' do %>
            <p class="mt-1 text-sm/6 text-gray-600">
              Note: you can add more initiatives later, after creating this impact card.
            </p>
          <% end %>
          <%= render 'section_body' do %>
            <div class="sm:col-span-4">
              <%= initiatives_form.label :name %>
              <div class="mt-2">
                <%= initiatives_form.text_field :name, placeholder: 'Initiative name' %>
              </div>
            </div>

            <div class="col-span-full">
              <%= initiatives_form.label :description %>
              <div class="mt-2">
                <%= initiatives_form.text_area :description, rows: 3, placeholder: 'Initiative description' %>
              </div>
            </div>
          <% end %>
        <% end %>

        <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 dark:border-white/10 pb-12 md:grid-cols-3">
          <div>
            <h3 class="text-sm font-semibold text-zinc-950 dark:text-white text-right">Contact Details</h3>
            <p class="mt-1 text-sm/6 text-gray-600 text-right">Enter the main contact for this initiative (optional).</p>
          </div>

          <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
            <div class="sm:col-span-3">
              <%= initiatives_form.label :contact_name %>
              <div class="mt-2">
                <%= initiatives_form.text_field :contact_name %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= initiatives_form.label :contact_email %>
              <div class="mt-2">
                <%= initiatives_form.text_field :contact_email %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= initiatives_form.label :contact_website %>
              <div class="mt-2">
                <%= initiatives_form.text_field :contact_website %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= initiatives_form.label :contact_position %>
              <div class="mt-2">
                <%= initiatives_form.text_field :contact_position %>
              </div>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 dark:border-white/10 pb-12 md:grid-cols-3">
          <div>
            <h3 class="pl-10 text-sm font-semibold text-zinc-950 dark:text-white text-right">Applicable Date Range</h3>
            <p class="mt-1 text-sm/6 text-gray-600 text-right">Optional</p>
          </div>

          <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
            <div class="sm:col-span-3">
              <%= initiatives_form.label :started_at %>
              <div class="mt-2">
                <%= initiatives_form.date_field :started_at %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= initiatives_form.label :finished_at %>
              <div class="mt-2">
                <%= initiatives_form.date_field :finished_at %>
              </div>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 dark:border-white/10 pb-12 md:grid-cols-3">
          <div>
            <h3 class="pl-10 text-sm font-semibold text-zinc-950 dark:text-white text-right">Stakeholders</h3>
            <p class="mt-1 text-sm/6 text-gray-600 text-right">Identify who might be interested in this initiative.</p>
          </div>
          <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2" id="initiatives-organisations" data-controller="initiatives-organisations">
            <%= render 'organisation_fields' %>
            <div class="sm:col-span-6" data-initiatives-organisations-target="initiativesOrganisations">
              <%= initiatives_form.fields_for :initiatives_organisations do |initiatives_organisations_form| %>
                <div class="flex items-center space-x-4 mt-3">
                  <%= initiatives_organisations_form.collection_select :organisation_id, policy_scope(Organisation), :id, :name, { include_blank: 'Select a stakeholder' } %>
                  <%= link_to 'Remove', '#', class: 'text-red-500', data: { action: 'initiatives-organisations#removeTag' } %>
                </div>
              <% end %>
            </div>

            <div class="sm:col-span-6 mt-2">
              <%= link_to 'Add Stakeholder', '#', id: 'add-organisation', class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500', data: { action: 'initiatives-organisations#addTag' } %>
            </div>
          </div>
        </div>


        <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 dark:border-white/10 pb-12 md:grid-cols-3">
          <div>
            <h3 class="pl-10 text-sm font-semibold text-zinc-950 dark:text-white text-right">Subsystem Tags</h3>
            <p class="mt-1 text-sm/6 text-gray-600 text-right">Identify relevant subsystem tags for this initiative.</p>
          </div>
          <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2" id="initiatives-subsystem-tags" data-controller="initiatives-subsystem-tags">
            <%= render 'subsystem_tag_fields' %>
            <div class="sm:col-span-6" data-initiatives-subsystem-tags-target="initiativesSubsystemTags">
              <%= initiatives_form.fields_for :initiatives_subsystem_tags do |initiatives_subsystem_tags_form| %>
                <div class="flex items-center space-x-4 mt-3">
                  <%= initiatives_subsystem_tags_form.collection_select :subsystem_tag_id, policy_scope(SubsystemTag), :id, :name, { include_blank: 'Select a subsystem tag' } %>
                  <%= link_to 'Remove', '#', class: 'text-red-500', data: { action: 'initiatives-subsystem-tags#removeTag' } %>
                </div>
              <% end %>
            </div>

            <div class="sm:col-span-6 mt-2">
              <%= link_to 'Add Subsystem Tag', '#', id: 'add-subsystem-tag', class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500', data: { action: 'initiatives-subsystem-tags#addTag' } %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= render 'form_buttons', form:, cancel_path: impact_cards_path %>
  <%- end %>
</div>
