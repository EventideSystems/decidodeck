<%= render 'section', first_section: true do %>
  <%= render 'section_header', title: 'Overview', subtitle: 'General settings for this impact card.' %>
  <%= render 'section_body' do %>
    <div class="sm:col-span-4">
      <%= form.label :name %>
      <div class="mt-2">
        <%= form.text_field(:name, placeholder: 'Card name', autofocus: true, required: true) %>
      </div>
    </div>

    <div class="col-span-full">
      <%= form.label :description %>
      <div class="mt-2">
        <%= form.rich_textarea :description, rows: 3, placeholder: '' %>
      </div>
      <p class="text-sm/6 text-gray-600 dark:text-gray-400">A brief description of the impact card (optional).</p>
    </div>
  <% end %>
<% end %>