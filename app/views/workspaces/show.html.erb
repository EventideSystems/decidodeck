<div class="mx-auto max-w-6xl">
  <div class="flex flex-wrap items-end justify-between gap-4">
    <div class="w-full">
      <%= page_header_tag 'Workspace Details' %>
      <div class="flex justify-between items-center mt-4">
        <div class="flex gap-6 py-6">
        <%= render partial: 'resource_summary', locals: { name: @workspace.name, background_color: 'bg-green-700' } %>
          <div class="space-y-1.5">
            <div class="text-base/6 font-semibold dark:text-white">
              <%= @workspace.name %>
            </div>
            <div class="text-xs/6 text-zinc-500 min-h-4">
              <%= @workspace.description %>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="flex justify-end items-center mb-4 gap-4" data-controller="switch-workspace">
            <% if @workspace == current_workspace %>
              <span class="text-xs/6 text-zinc-600">Current workspace</span>
            <% else %>
              <%= 
                link_to_primary(
                  'Switch To', 
                  switch_workspace_path(@workspace), 
                  class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500',
                  data: { 
                    action: 'click->switch-workspace#handleClick',
                    turbo: false
                  }
                )
              %>
            <% end %>

            <%- if policy(@workspace).edit? %>
              <%= link_to_primary 'Edit Workspace', edit_workspace_path(@workspace) %>
            <%- end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= horizontal_rule(class: 'my-10 mt-6') %>
  <%= render 'show_page_dl_section', title: 'Overview' do %>
    <%= definition_list_element('Account', @workspace.account.name) %>
    <%= definition_list_element('Description', @workspace.description) %>
  <% end %>

  <%= render 'show_page_dl_section', title: 'Other Settings' do %>
    <%= definition_list_element('Classic grid mode', @workspace.classic_grid_mode) %>
  <% end %>

  <%= render 'section', first_section: false do %>
    <%= render 'section_header', title: 'Workspace Members' %>
    <%= render 'section_body' do %>
      <div class="sm:col-span-8">
        <div class="w-full">
          <ul class="divide-y divide-zinc-200 dark:divide-zinc-700">
            <li class="py-2">
              <div class="grid grid-cols-2 font-semibold text-zinc-700 dark:text-zinc-200 text-sm">
                <div class="text-left">Member</div>
                <div class="text-left">Role</div>
              </div>
            </li>
            <% @workspace.workspace_members.select { |wm| wm.user.present? }.each do |workspace_member| %>
              <li class="py-2">
                <div class="grid grid-cols-2 text-zinc-600 dark:text-zinc-300 text-sm">
                  <div class="text-left">
                    <%= link_to workspace_member.user.display_name, user_path(workspace_member.user), class: "font-semibold text-blue-700 dark:text-blue-300 hover:underline" %>
                  </div>
                  <div class="text-left"><%= workspace_member.role&.titleize || 'Unassigned' %></div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

