<nav
  class="main-header navbar navbar-expand navbar-wicked navbar-light border-bottom skin-wicked">
  <!-- Left navbar links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" data-widget="pushmenu" href="#"
        ><i class="fas fa-bars"></i
      ></a>
    </li>
  </ul>

  <!-- Right navbar links -->
  <ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
      <a class="nav-link" data-toggle="dropdown" href="#">
        <img src="<%= current_user.profile_picture_url %>" class="user-image" alt="User Image">
        <span class="hidden-xs"><%= current_user_name %></span>
      </a>
      <ul class="dropdown-menu">
        <li class="user-header">
          <img src="<%= current_user.profile_picture_url %>" class="img-circle" alt="User Image">
          <p>
            <%= current_user_name %>
            <small><%= current_user_membership_summary %></small>
          </p>
        </li>
        <li class="user-body">
          <div class="row">
            <div class="col-xs-4 text-center">
              <%= link_to 'Profile', edit_user_path(current_user) %>
            </div>
            <div class="col-xs-4 text-center">
            </div>
            <div class="col-xs-4 text-center">
              <%- if current_account.present? %>
                <%- path = policy(current_account).edit? ? edit_account_path(current_account) : account_path(current_account) %>
                <%= link_to 'Account', path %>
              <%- end %>  
            </div>
          </div>
        </li>
        <li class="user-footer">
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'btn btn-default btn-flat' %>
        </li>
      </ul>
    </li>
  
    <li class="nav-item d-none d-sm-inline-block">
      <%= link_to('http://www.wickedlab.com.au/help',  target: :_blank, class: 'nav-link') do
          safe_join([content_tag(:i, '', class: "fa fa-support"), ' User Help'])
        end
      %>
    </li>
    <%- if current_user.admin? %>
      <li class="nav-item">
        <a
          class="nav-link"
          data-widget="control-sidebar"
          data-slide="true"
          href="#"
          ><i class="fa fa-gears"></i
        ></a>
      </li>
    <%- end %>
  </ul>
</nav>
