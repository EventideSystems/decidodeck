<nav class="brand-link-small d-block d-sm-none">
  <%= render 'layouts/logo' %>
</nav>
<nav
  class="main-header navbar navbar-expand navbar-wicked navbar-light border-bottom skin-wicked">
  <!-- Left navbar links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" data-widget="pushmenu" href="#"
        ><i class="fas fa-bars"></i
      ></a>
    </li>
  </ul>

  <!-- Right navbar links -->
  <ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="hidden-xs" data-toggle="tooltip" title="<%= current_user_membership_summary %>"><%= current_user_name %></span>
        </a>

        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to 'Profile', edit_user_path(current_user), class: 'dropdown-item' %>
          <%- if current_account.present? %>
            <%- path = policy(current_account).edit? ? edit_account_path(current_account) : account_path(current_account) %>
            <%= link_to 'Account', path, class: 'dropdown-item' %>
          <%- end %>
          <div class="dropdown-divider"></div>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'dropdown-item' %>
        </div>
      </li>
    </li>

    <li class="nav-item d-none d-sm-inline-block">
      <%= link_to('http://www.wickedlab.com.au/help',  target: :_blank, class: 'nav-link') do
          safe_join([content_tag(:i, '', class: "fa fa-support"), ' User Help'])
        end
      %>
    </li>
    <%- if current_user.admin? %>
      <li class="nav-item">
        <a
          class="nav-link"
          data-widget="control-sidebar"
          data-slide="true"
          href="#"
          ><i class="fa fa-gears"></i
        ></a>
      </li>
    <%- end %>
  </ul>
</nav>
