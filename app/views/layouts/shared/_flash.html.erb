<% flash.each do |type, message| %>
  <div class="alert alert-dismissible <%= bootstrap_class_for(type) %> fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <%= message %>
  </div>
<% end %>

