<%= turbo_stream.append :wicked_problems do %>
  <%= render @wicked_problems %>
<% end %>
<%= turbo_stream.replace :pagination do %>
  <% if @pagy.next.present? %>
    <%=
      turbo_frame_tag(
        :pagination,
        loading: :lazy,
        src: wicked_problems_path(format: :turbo_stream, page: @pagy.next)
      )
    %>
  <% end %>
<% end %>
