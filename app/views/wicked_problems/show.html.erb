<%= simple_form_for(@wicked_problem, role: 'form', html: { class: 'form-horizontal record-form' }) do |f| %>
  <%= form_header(@wicked_problem) %>
  <%= f.input :name, readonly: true, required: false %>
  <%= f.input :description , as: :text, input_html: { class: 'textarea' }, readonly: true %>
  <hr> 
  <%= f.input :created_at, as: :string, readonly: true %>
  <%= f.input :updated_at, as: :string, readonly: true %>
  <%= edit_button('Edit Wicked Problem', edit_wicked_problem_path(@wicked_problem)) if policy(@wicked_problem).edit? %> 
<% end %>
