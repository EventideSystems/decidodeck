<%= simple_form_for(@wicked_problem, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@wicked_problem) %></h3>
    </div>
    <div class='box-body'>
      <%= f.input :name, readonly: true, required: false %>
      <%= f.input :description , as: :text, input_html: { class: 'textarea' }, readonly: true %>
      <hr> 
      <%= f.input :created_at, as: :string, readonly: true %>
      <%= f.input :updated_at, as: :string, readonly: true %>
    </div>

    <%- if policy(@wicked_problem).edit? %>
      <div class='box-footer'>
        <%= link_to 'Edit Wicked Problem', edit_wicked_problem_path(@wicked_problem), class: 'btn btn-primary float-right' %> 
      </div>
    <%- end %>  
  </div>
<% end %>
