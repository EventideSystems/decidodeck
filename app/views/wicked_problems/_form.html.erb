<div class='box box-primary'>
  <%= simple_form_for(@wicked_problem, role: 'form') do |f| %>
    <%= f.error_notification %>

    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@wicked_problem) %></h3>
    </div>
    <div class='box-body'>
      <div class='form-group'>
        <%= f.association :account, collection: policy_scope(Account), label_method: :name, value_method: :id %>
      </div>  
      <div class='form-group'>
        <%= f.input :name %>
      </div>  
      <div class='form-group'>
        <%= f.input :description , as: :text, input_html: { class: 'textarea' } %>
      </div>
    </div>

    <div class='box-footer'>
      <%= f.button :submit, inpuclass: 'btn btn-primary' %>
    </div>
  <% end %>
</div>