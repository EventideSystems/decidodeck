<%= render layout: "layouts/devise_page", locals: { title: t('devise.invitations.edit.header') } do %>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { class: 'space-y-6' }, data: { turbo: false }) do |f| %>
    <%= f.hidden_field :invitation_token %>
    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.password_field :password, required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-xs focus:border-teal-500 focus:outline-hidden focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-xs focus:border-teal-500 focus:outline-hidden focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

  <div class="mb-4 flex items-center">
    <%= check_box_tag :accept_terms, required: true, class: "mr-2" %>
    <label for="terms_checkbox" class="text-sm">
      I have read and accept the Terms and Conditions
      <%= link_to "Terms and Conditions", terms_path, target: "_blank", class: "underline" %> and
      <%= link_to "Privacy Policy", privacy_path, target: "_blank", class: "underline" %>.
    </label>
  </div>

    <div>
      <%= f.submit  t("devise.invitations.edit.submit_button"), class: "flex w-full justify-center rounded-md border border-transparent bg-teal-600 py-2 px-4 text-sm font-medium text-white shadow-xs hover:bg-teal-700 focus:outline-hidden focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
    </div>
  <% end %>
<% end %>
