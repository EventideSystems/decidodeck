<%= render layout: "layouts/devise_page", locals: { title: "Invite Users" } do %>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { class: 'space-y-6' }, data: { turbo: false }) do |f| %>

    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700 dark:text-gray-700' %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type: 'email', required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-xs focus:border-teal-500 focus:outline-hidden focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :name, class: 'block text-sm font-medium text-gray-700 dark:text-gray-700' %>
      <div class="mt-1">
        <%= f.text_field :name, autocomplete: "name", required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-xs focus:border-teal-500 focus:outline-hidden focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= custom_label_tag :account_role, "Role in '#{current_account.name}' account", class: 'block text-sm font-medium text-gray-700 dark:text-gray-700' %>
      <%= custom_select_tag :account_role, options_for_account_roles_select %>
    </div>

    <div>
      <%= custom_label_tag :workspace_role, "Role in '#{current_workspace.name}' workspace", class: 'block text-sm font-medium text-gray-700 dark:text-gray-700' %>
      <%= custom_select_tag :workspace_role, options_for_select(WorkspaceMember.workspace_roles.keys.map { |key| [key.capitalize, key]}, WorkspaceMember.workspace_roles.keys.first) %>
    </div>

    <div>
      <%= f.submit  t("devise.invitations.new.submit_button"), class: "flex w-full justify-center rounded-md border border-transparent bg-teal-600 py-2 px-4 text-sm font-medium text-white shadow-xs hover:bg-teal-700 focus:outline-hidden focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
    </div>
  <% end %>
<% end %>
