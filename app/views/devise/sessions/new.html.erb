<div class="login-box-body">
  <p class="login-box-msg">Sign in to start your session</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  
    <div class="form-group has-feedback">
      <%= f.input :email, required: false, autofocus: true, label: false, :wrapper => :horizontal_login_input %>
      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
      <%= f.input :password, required: false, label: false, :wrapper => :horizontal_login_input %>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
      <div class="col-xs-8">
        <div class="checkbox icheck">
          <label class="">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </label>
        </div>
      </div>

      <div class="pull-right">
        <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
      </div>

    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
