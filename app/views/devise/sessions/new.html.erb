<div class="login-box">
  <div class="login-logo">
    <span class="logo-lg">
      <%= image_tag('logo.png', style: 'height:35px;margin-top:-4px;margin-right:7px')%>
      <b>Wicked</b>Lab
    </span>
  </div>

  <%= render partial: 'layouts/shared/panel_flash' %>

  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>

        <div class="input-group mb-3">
          <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: 'Email', type: 'email', class: 'form-control' %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>

        <div class="input-group mb-3">
          <%= f.input_field :password, required: false, autofocus: true, label: false, placeholder: 'Password', type: 'password', class: 'form-control' %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-8">
            <div class="icheck-primary pt-2">
              <label class="">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </label>
            </div>
          </div>
          <div class="col-4">
            <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      <%- end -%>

      <p class="mb-1">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end -%>
      </p>
    </div>
  </div>
</div>
