<div class="login-box">
  <div class="login-logo">
    <span class="logo-lg">
      <%= image_tag('logo.png', style: 'height:35px;margin-top:-4px;margin-right:7px')%>
      <b>Wicked</b>Lab
    </span>
  </div>

  <%= render partial: 'layouts/shared/flash' %>

  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Forgot your password?</p>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
        <div class="input-group mb-3">
          <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: 'Email', type: 'email', class: 'form-control' %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            <%= link_to "Log in", new_session_path(resource_name) %>
          </div>
          <div class="col-10">
            <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
