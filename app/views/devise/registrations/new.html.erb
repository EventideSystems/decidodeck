<%= render layout: "layouts/devise_page", locals: { title: 'Sign up' } do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-6' }, data: { turbo: false }) do |f| %>
    <%= recaptcha_v3(action: 'registration') %>
    <%= f.hidden_field :subscription_type, value: subscription_type_for_current_theme %>
    <div>
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type: 'email', required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-xs focus:border-teal-500 focus:outline-hidden focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.password_field :password, required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-xs focus:border-teal-500 focus:outline-hidden focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, required: true, class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-xs focus:border-teal-500 focus:outline-hidden focus:ring-teal-500 sm:text-sm" %>
      </div>
    </div>

    <div data-controller="terms">
      <div class="mb-4 flex items-center">
        <input type="checkbox" id="terms_checkbox" data-terms-target="checkbox" class="mr-2" />
        <label for="terms_checkbox" class="text-sm">
          I have read and agree to the
          <%= link_to "Terms and Conditions", terms_path, target: "_blank", class: "underline" %>
          and
          <%= link_to "Privacy Policy", privacy_path, target: "_blank", class: "underline" %>.
        </label>
      </div>
      <div>
        <%= 
          f.submit(
            "Sign up", 
            class: "flex w-full justify-center rounded-md border border-transparent bg-teal-600 py-2 px-4 text-sm font-medium text-white shadow-xs hover:bg-teal-700 focus:outline-hidden focus:ring-2 focus:ring-teal-500 focus:ring-offset-2", 
            title: "You must agree to the terms and conditions before submitting this form",
            data: { terms_target: "submit" }, 
            disabled: true 
          )
        %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
