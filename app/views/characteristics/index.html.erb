<% content_for :page_actions do %>
  <%= 
    link_to(new_characteristic_path, class: 'btn btn-primary') do
      safe_join([content_tag(:i, '', class: "fa fa-plus"), ' New Chararacteristic'])
    end 
  %>
<% end %>

<div class="box">
  <div class='box-body no-padding'>
  <%= table_for @characteristics, :table_html => { :class => "table table-striped" },
                        :sortable => true,
                        :data_row_html => {
                          id: lambda { |characteristic| "characteristic-#{characteristic.id}" },
                          class: 'table-actions'
                        } do |table| %>
    <% table.column :name, link_action: :edit, formatter: lambda { |text| truncate_text(text, 30) } %> %>
    <% table.column :description, formatter: lambda { |text| truncate_text(text, 30) } %> %>
    <% table.column :focus_area, :formatter => lambda { |focus_area| truncate_text(focus_area.name, 30) } %>
    <% table.column :created_at %>
    <% table.column :data => "Show", id: lambda %>
    <% table.column :data => "Modify", link_action: :edit %>
    <% table.column :data => "Delete", link_method: :delete, link_confirm: "Are you sure?" %>
    <% table.footer do %>
      <div class="pull-right">
        <%= paginate @characteristics %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>