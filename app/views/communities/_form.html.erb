<%= form_with(model: community, local: false) do |form| %>
  <div class="flex flex-col space-y-4">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "form-input mt-1 block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" %>
    </div>
    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "form-input mt-1 block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" %>
    </div>
    <div class="flex justify-end space-x-4">
      <%= form.submit "Save", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
      <button type="button" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600" data-action="click->new-community#toggleForm">Cancel</button>
    </div>
  </div>
<% end %>
