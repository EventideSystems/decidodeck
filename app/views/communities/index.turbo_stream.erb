<%= turbo_stream.append :communities do %>
  <%= render @communities %>
<% end %>
<%= turbo_stream.replace :pagination do %>
  <% if @pagy.next.present? %>
    <%=
      turbo_frame_tag(
        :pagination,
        loading: :lazy,
        src: communities_path(format: :turbo_stream, page: @pagy.next)
      )
    %>
  <% end %>
<% end %>
