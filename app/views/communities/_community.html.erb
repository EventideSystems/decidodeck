<li class="flex items-center justify-between py-4 border-b border-zinc-950/10 dark:border-white/10">
  <div class="flex items-center gap-6 w-1/3">
    <div class="flex-shrink-0 rounded-lg flex items-center justify-center community-<%= community.id %>">
      <p class="p-2 text-sm"><%= community.name %></p>
    </div>
  </div>

  <div class="flex flex-col space-y-1.5 w-2/3">
    <div class="text-sm text-zinc-500">
      <%= community.description %>
    </div>
  </div>

  <div class="flex items-center gap-4 ml-auto">
    <%= link_to "Edit", edit_community_path(community), class: "text-sm text-blue-500 hover:underline", data: { turbo_frame: "edit_community_#{community.id}" } %>
    <%= link_to "Delete", community_path(community), method: :delete, data: { confirm: "Are you sure?" }, class: "text-sm text-red-500 hover:underline" %>
  </div>

  <%= turbo_frame_tag "edit_community_#{community.id}" %>
</li>
