
<div class="col-md-6">
  <div class="card">
    <div class="card-header with-border">
      <h3 class="card-title card-title-recent-activity">Recent Activity</h3>
    </div>
    <div class="card-body scrollable-panel">
      <ul>
        <%- @recent_versions.each do |version| %>
          <li><%= version_summary(version) %></li>  
        <%- end %>
      </ul>
    </div>
    <div class="card-footer text-right">
      <%= link_to(activities_path) do
        safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
      end %>
    </div>
  </div>
</div>
