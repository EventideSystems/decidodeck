<div class="col-md-6">
  <div class="box box-default">
    <div class="box-header with-border">
      <i class="fa fa-warning"></i>

      <h3 class="box-title">Recent Activity</h3>
    </div>
    <div class="box-body">
      <ul>
        <%- @recent_activities.each do |activity| %>
          <li><%= "#{activity.created_at} #{activity.key}" %></li>  
        <%- end %>
      </ul>
    </div>
    <div class="box-footer">
      <%= link_to(activities_path, {class: 'pull-right'}) do
        safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
      end %>
    </div>
  </div>
</div>