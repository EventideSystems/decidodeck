<div class="mt-8 flex items-end justify-between">
  <h2 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 text-black dark:text-white">Recent Activity</h2>
</div>

<div class="inline-block min-w-full align-middle sm:px-(--gutter)">
  <table class="min-w-full text-left text-sm/6 text-zinc-950 dark:text-white">
    <thead class="text-zinc-500 dark:text-zinc-400">
      <tr class="">
        <th
          class="border-b border-b-zinc-950/10 px-4 py-2 font-medium first:pl-(--gutter,--spacing(2)) last:pr-(--gutter,--spacing(2)) dark:border-b-white/10 sm:first:pl-1 sm:last:pr-1"
        >
          Resource
        </th>
        <th
          class="border-b border-b-zinc-950/10 px-4 py-2 font-medium first:pl-(--gutter,--spacing(2)) last:pr-(--gutter,--spacing(2)) dark:border-b-white/10 sm:first:pl-1 sm:last:pr-1"
        >
          Event
        </th>
        <th
          class="border-b border-b-zinc-950/10 px-4 py-2 font-medium first:pl-(--gutter,--spacing(2)) last:pr-(--gutter,--spacing(2)) dark:border-b-white/10 sm:first:pl-1 sm:last:pr-1"
        >
          User
        </th>
      </tr>
    </thead>
    <tbody>
      <%- @recent_versions.each do |version| %>
        <tr class="border-b border-b-zinc-950/10">
          <td
            class="px-4 py-2 first:pl-(--gutter,--spacing(2)) last:pr-(--gutter,--spacing(2)) dark:border-b-white/10 sm:first:pl-1 sm:last:pr-1"
          >
            <%= version_summary(version) %>
          </td>
          <td
            class="px-4 py-2 first:pl-(--gutter,--spacing(2)) last:pr-(--gutter,--spacing(2)) dark:border-b-white/10 sm:first:pl-1 sm:last:pr-1"
          >
            <%= version_event_past_tense(version.event) %>
          </td>
          <td
            class="px-4 py-2 first:pl-(--gutter,--spacing(2)) last:pr-(--gutter,--spacing(2)) dark:border-b-white/10 sm:first:pl-1 sm:last:pr-1"
          >
            <%= version_whodunnit(version) %>
          </td>
        </tr>
      <%- end %>
    </tbody>
  </table>

  <div class="mt-3 text-sm/6 sm:text-xs/6">
    <span class="text-zinc-500"><%= link_to('More info', activities_path) %></span>
  </div>
</div>
