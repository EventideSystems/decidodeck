<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 dashboard">
  <div class="col-span-1">
    <!-- small box -->
    <div class="bg-teal-500 p-4 rounded-lg shadow-lg">
      <div class="inner">
        <h3 class="text-3xl font-bold"><%= @scorecard_count %></h3>
        <p class="text-lg"><%= dashboard_scorecards_title.pluralize(@scorecard_count) %></p>
      </div>
      <div class="icon">
        <i class="fa fa-check-square-o text-white text-4xl"></i>
      </div>
      <%= link_to(default_scorecards_path, {class: 'block mt-4 text-white font-bold'}) do
            safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
          end
      %>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-span-1">
    <!-- small box -->
    <div class="bg-green-500 p-4 rounded-lg shadow-lg">
      <div class="inner">
        <h3 class="text-3xl font-bold"><%= @initiative_count %></h3>
        <p class="text-lg"><%= 'Initiative'.pluralize(@initiative_count) %></p>
      </div>
      <div class="icon">
        <i class="fa fa-lightbulb-o text-white text-4xl"></i>
      </div>
      <%= link_to(initiatives_path, {class: 'block mt-4 text-white font-bold'}) do
            safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
          end
      %>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-span-1">
    <!-- small box -->
    <div class="bg-blue-500 p-4 rounded-lg shadow-lg">
      <div class="inner">
        <h3 class="text-3xl font-bold"><%= @wicked_problem_count %></h3>
        <p class="text-lg"><%= 'Problem'.pluralize(@wicked_problem_count) %></p>
      </div>
      <div class="icon">
        <i class="fa fa-lightbulb-o text-white text-4xl"></i>
      </div>
      <%= link_to(initiatives_path, {class: 'block mt-4 text-white font-bold'}) do
            safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
          end
      %>
    </div>
  </div>

  <div class="col-span-1">
    <!-- small box -->
    <div class="bg-blue-500 p-4 rounded-lg shadow-lg">
      <div class="inner">
        <h3 class="text-3xl font-bold"><%= @organisation_count %></h3>
        <p class="text-lg"><%= 'Stakeholder'.pluralize(@organisation_count) %></p>
      </div>
      <div class="icon">
        <i class="fa fa-lightbulb-o text-white text-4xl"></i>
      </div>
      <%= link_to(initiatives_path, {class: 'block mt-4 text-white font-bold'}) do
            safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
          end
      %>
    </div>
  </div>
  <!-- ./col -->
</div>

<div class="grid grid-cols-1 gap-6 dashboard">
  <%= render 'dashboard/welcome_message'%>
  <%= render 'dashboard/activities'%>
</div>

