<div class="row">
  <div class="col-md-6">
    <div class="box box-default">
      <div class="box-header with-border">
        <i class="fa fa-warning"></i>

        <h3 class="box-title">Welcome</h3>
      </div>
      <div class="box-body">
        <%= sanitize @welcome_message %>
      </div>
    </div>
  </div>
  <%= render 'dashboard/activities'%>
</div>