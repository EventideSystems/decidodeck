<div class="row dashboard">
  <div class="col-md-6">
    <div class="box box-default">
      <div class="box-header with-border">
        <i class="fa fa-exclamation"></i>

        <h3 class="box-title">Welcome</h3>
      </div>
      <div class="box-body scrollable-panel">
        <%= sanitize @welcome_message %>
      </div>
      <div class="box-footer">
        <%= link_to(welcome_message_path, class: 'remote-link pull-right') do
          safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
        end %>        
      </div>
    </div>
  </div>
  <%= render 'dashboard/activities'%>
</div>

<div class="row">
  <%- @video_tutorials.each do |video_tutorial| %>
    <%= render partial: 'video_tutorial_thumbnail', locals: { video_tutorial: video_tutorial }%>
  <%- end %>
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box">
      <%= link_to video_tutorials_path do %>
      <span class="info-box-icon bg-green"><i class="fa fa-youtube-play"></i></span>

      <div class="info-box-content">
        <span class="info-box-text">All tutorials</span>
        <span class="info-box-link">View All</span>
      </div>
      <% end %>
    </div>
  </div>
</div>