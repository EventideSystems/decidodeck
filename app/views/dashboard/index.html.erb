<div class="row">
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-aqua">
      <div class="inner">
        <h3><%= @scorecard_count %></h3>

        <p><%= 'Scorecard'.pluralize(@scorecard_count) %></p>
      </div>
      <div class="icon">
        <i class="fa fa-check-square-o"></i>
      </div>
      <%= link_to(scorecards_path, {class: 'small-box-footer'}) do
            safe_join(['More info ', content_tag(:i, '', class: "fa fa-arrow-circle-right")])
          end
      %>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-lg-3 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-green">
      <div class="inner">
