<li>
  <hr
    role="presentation"
    class="w-full border-t border-zinc-950/10 dark:border-white/10"
  />
  <div class="flex items-center justify-between">
    <div class="flex gap-6 py-6">
      <%= render partial: 'resource_summary', locals: { name: organisation.name, background_color: 'bg-teal-500' } %>
      <div class="space-y-1.5">
        <div class="text-base/6 font-semibold dark:text-white">
          <%= link_to organisation.name, organisation_path(organisation), data: { turbo: false } %>
        </div>
        <div class="text-xs/6 text-zinc-500">
          <%= organisation.description %>
        </div>
        <div class="text-xs/6 text-zinc-600">
          <%= organisation.stakeholder_type_name %>
        </div>
      </div>
    </div>
    <div class="flex items-center gap-4">
      <%= render_dropdown_menu do %>
        <%= dropdown_menu_trigger do %>
          <span class="text-zinc-900 dark:text-white">
            <%= render_icon :more %>
          </span>
        <% end %>

        <%= dropdown_menu_content do %>
          <%=
            dropdown_menu_item do
              link_to "View", organisation_path(organisation), class: "block w-full text-sm", data: { turbo: false }
            end
          %>
          <%=
            dropdown_menu_item do
              link_to "Modify", edit_organisation_path(organisation), class: "block w-full text-sm", data: { turbo: false }
            end
          %>
        <% end %>
      <% end %>
    </div>
  </div>
</li>
