<li>
  <hr
    role="presentation"
    class="w-full border-t border-zinc-950/10 dark:border-white/10"
  />
  <div class="flex items-center justify-between">
    <div class="flex gap-6 py-6">
      <%= render partial: 'resource_summary', locals: { name: organisation.name, background_color: 'bg-teal-500' } %>
      <div class="space-y-1.5">
        <div class="text-base/6 font-semibold dark:text-white">
          <%= link_to highlight(organisation.name, params.dig(:q, :name_or_description_cont)), organisation_path(organisation) %>
        </div>
        <div class="text-xs/6 text-zinc-500">
          <%= highlight(organisation.description, params.dig(:q, :name_or_description_cont)) %>
        </div>
      </div>
    </div>
  </div>
</li>

