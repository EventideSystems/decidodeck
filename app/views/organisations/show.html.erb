<%= simple_form_for(@organisation, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@organisation) %></h3>
    </div>
    <div class='box-body'>
      <%= f.input :name, required: false, readonly: true %>
      <%= f.input :description , as: :text, input_html: { class: 'textarea' }, readonly: true %>
      <%= f.input :sector_name, as: :string, label: 'Sector', readonly: true %>
      <%= f.input :weblink, readonly: true %>
      <hr> 
      <%= f.input :created_at, as: :string, readonly: true %>
      <%= f.input :updated_at, as: :string, readonly: true %>
    </div>  
    <%- if policy(@organisation).edit? %>
      <div class='box-footer'>
        <%= link_to 'Edit Organisation', edit_organisation_path(@organisation), class: 'btn btn-primary pull-right' %> 
      </div>
    <%- end %>
  </div>
<% end %>