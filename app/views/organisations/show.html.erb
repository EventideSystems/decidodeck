<%= simple_form_for(@organisation, role: 'form', html: { class: 'form-horizontal record-form' }) do |f| %>
  <%= form_header(@organisation) %>
  <%= f.input :name, required: false, readonly: true %>
  <%= f.input :description , as: :text, input_html: { class: 'textarea' }, readonly: true %>
  <%= f.input :sector_name, as: :string, label: 'Sector', readonly: true %>
  <%= f.input :weblink, readonly: true %>
  <hr> 
  <%= f.input :created_at, as: :string, readonly: true %>
  <%= f.input :updated_at, as: :string, readonly: true %>
  <%= edit_button('Edit Organisation', edit_organisation_path(@organisation)) if policy(@organisation).edit? %> 
<% end %>
