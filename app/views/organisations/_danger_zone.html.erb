<%- if policy(organisation).destroy? %>
  <div class="mx-auto max-w-6xl pt-10">
    <%= render 'section' do %>
      <%= render 'section_header', title: 'Danger Zone' %>
      <%= render 'section_body', class: 'border border-rose-500 rounded-lg gap-y-0' do %>
        <div class="sm:col-span-6 border-b border-gray-900 p-4">
          <%= custom_label_tag "Delete this #{Organisation.model_name.human.downcase}" %>
          <div class="mt-2">
            <p class="text-sm/6 text-gray-600 dark:text-gray-400 my-2">This action cannot be undone. This will permanently delete the stakeholder and all associated data.</p>
            <div class="flex justify-end">
              <%=
                button_to(
                  "Delete Stakeholder",
                  organisation_path(organisation),
                  method: :delete,
                  form: {
                    data: {
                      turbo: false,
                      controller: "confirmation",
                      action: 'submit->confirmation#confirm',
                      confirmation_message_value: "Are you sure you want to delete this #{Organisation.model_name.human.downcase}?"
                    }
                  },
                  class: TailwindSupport::DANGER_ZONE_BUTTON_CLASS
                )
              %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
