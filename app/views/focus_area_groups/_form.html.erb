<%= simple_form_for(@focus_area_group, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@focus_area_group) %></h3>
    </div>
    <div class='box-body'>
      <%= f.input :name %>
      <%= f.input :description , as: :string %>
      <%= f.input :position %>
      
      <%= f.input :video_tutorial_id, collection: VideoTutorial.all, 
        hint: 'Any video tutorial can only be assigned to one other record at a time. Link a tutorial to this record removes any other link elsewhere.' 
      %>
    </div>
    <%= render_form_button(f) %>
  </div>
<% end %>
