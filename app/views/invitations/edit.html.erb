<div class="login-box">
  <div class="login-logo">
    <span class="logo-lg">
      <%= image_tag('logo-devise.png', style: 'width:50%')%>
    </span>
  </div>

  <%= render partial: 'layouts/shared/flash_messages' %>

  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg"><%= t 'devise.invitations.edit.header' %></p>
      <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: 'form-horizontal' } do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :invitation_token %>

        <div class="input-group mb-3">
          <%= f.input_field :password, required: false, autofocus: true, label: false, placeholder: 'New password', type: 'password', class: 'form-control' %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <div class="input-group mb-3">
          <%= f.input_field :password_confirmation, required: false, autofocus: true, label: false, placeholder: 'Password confirmation', type: 'password', class: 'form-control' %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col text-center">
            <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
