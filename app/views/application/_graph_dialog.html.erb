<div id="dialog-wrapper">
  <dialog id="dialog" data-<%= data_controller %>-target="dialog" class="[&_a]:text-blue-500 max-w-lg rounded-md bg-white dark:bg-black px-4 pb-4 pt-5 text-left shadow-xl text-black dark:text-white">
    <div class="flex justify-between">
      <div class="flex items-center space-x-2">
        <div class="h-4 w-4 rounded-full" data-<%= data_controller %>-target="dialogTitleColor"></div>
        <h2 class="text-lg font-semibold text-zinc-950 text-black dark:text-white" data-<%= data_controller %>-target="dialogTitle"></h2>
      </div>
      <h2 class="text-lg font-semibold text-zinc-950 dark:text-black pl-2" data-<%= data_controller %>-target="dialogTitle"></h2>
      <button data-<%= data_controller %>-target="closeDialog" class="h-6 w-6 text-zinc-500 dark:text-white hover:text-zinc-700 dark:hover:text-white" aria-label="Close dialog">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="text-sm" data-<%= data_controller %>-target="dialogContent"></div>
  </dialog>
</div>
