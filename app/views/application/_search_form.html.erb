<div>
  <%= search_form_for record, { data: { turbo_frame: :list } }.merge(defined?(options) ? options : {}) do |f| %>
    <%= f.label (local_assigns[:search_field].present? ? search_field : :name_or_description_cont), 'Search', class: 'sr-only text-black dark:text-white'  %>
    <%=
      f.search_field(
        (local_assigns[:search_field].present? ? search_field : :name_or_description_cont),
        placeholder:,
  class: "form-input w-60 border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800",
        oninput: 'this.form.requestSubmit()',
        autofocus: true,
        autocomplete: 'off'
        )
      %>
  <% end %>
</div>
