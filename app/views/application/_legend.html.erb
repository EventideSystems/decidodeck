<%# NOTE: Print-only legend used by grids and graphs -%>
<div class="hidden print:block border border-black p-4 mt-4 rounded-lg" >
  <div class="flex justify-between items-center">
    <div class="flex flex-col space-y-2">
      <h4 class="text-md font-bold print:text-black">Legend</h4>
      <% items.each do |item| %>
        <div class="flex items-start gap-2">
          <span class="mt-1.5 min-w-2 h-2" style="background-color: <%= item[:color] %>"></span>
          <span class="text-sm font-medium print:text-black"><%= item[:label] %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
