<div class="box">
  <div class="box-header">
    <%= link_to "Invite User", new_user_invitation_path, class: 'btn btn-primary' %>
  </div>
  <div class='box-body no-padding'>
  <%= table_for @users, :table_html => { :class => "table table-striped" },
                        :sortable => false,
                        :data_row_html => {
                          :xclass => lambda { cycle('success', 'error', 'warning', 'info')},
                          :id => lambda { |user| "user-#{user.id}" }
                        } do |table| %>
    <% table.column :name %>
    <% table.column :email %>
    <% table.column :data => "Show", :link => true %>
    <% table.column :data => "Modify", :link_action => :edit %>
    <% table.column :data => "Delete", :link_method => :delete, :link_confirm => "Are you sure?" %>
    <% table.footer do %>
      <div class="pull-right">
        <%= paginate @users %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>