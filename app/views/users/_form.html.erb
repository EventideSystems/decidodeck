<%= simple_form_for(@user, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@user) %></h3>
    </div>
    <div class='box-body'>
      <%= f.input :email %>
      <%= f.input :name %>
      <hr>
      <%= f.input :account_role, collection: lookup_account_roles, include_blank: false %>
      <hr> 
      <%= f.input :created_at, as: :string, readonly: true %>
      <%= f.input :updated_at, as: :string, readonly: true %>
      <%= f.input :last_sign_in_at, as: :string, readonly: true %>
    </div>
    <div class='box-footer'>
      <%= f.button :submit, class: 'btn btn-primary pull-right' %>
    </div>
  </div>
<% end %>

