<%= simple_form_for(@user, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@user) %></h3>
    </div>
    <div class='box-body'>
        <%= f.input :name %>
        <%= f.input :email %>
    </div>
    
    <%= render 'accounts_users', form: f %>

    <div class='box-footer'>
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

