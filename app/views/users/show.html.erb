<%= simple_form_for(@user, role: 'form', html: { class: 'form-horizontal record-form' }) do |f| %>
  <%= form_header(@user) %>
  <%= f.input :email, required: false, readonly: true %>
  <%= f.input :name, readonly: true %>
  <hr>
  <%= f.input :system_role, as: :string, readonly: true %>
  <%= f.input :account_role, as: :string, readonly: true %>
  <hr> 
  <%= f.input :created_at, as: :string, readonly: true %>
  <%= f.input :updated_at, as: :string, readonly: true %>
  <%= f.input :last_sign_in_at, as: :string, readonly: true %>
  <%= edit_button('Edit User', edit_user_path(@user)) if policy(@user).edit? %> 
<% end %>
