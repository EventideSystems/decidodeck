<%= turbo_frame_tag dom_id(@data_model, :edit_description) do %>
  <%= form_for @data_model, url: update_description_data_model_path(@data_model) do |form| %>
    <div class="flex items-center gap-4">
      <%= form.rich_textarea :description, rows: 3 %>
      <%= form.submit 'Save' %>
    </div>
  <% end %>
<% end %>