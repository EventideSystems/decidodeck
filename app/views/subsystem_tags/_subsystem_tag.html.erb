<li>
  <hr
    role="presentation"
    class="w-full border-t border-zinc-950/10 dark:border-white/10"
  />
  <div class="flex items-center justify-between" data-tags-target="tag" data-active=<%= subsystem_tag == @subsystem_tag %>>
    <div class="flex gap-6 py-6">
      <div class="w-32 shrink-0">
        <div class="mx-auto h-20 w-20 flex-shrink-0 rounded-lg bg-green-700 flex items-center justify-center">
          <p class="text-4xl text-gray-300"><%= subsystem_tag.name.lstrip[0] %></p>
        </div>
      </div>
      <div class="space-y-1.5">
        <div class="text-base/6 font-semibold dark:text-white">
          <%= link_to highlight(subsystem_tag.name, params.dig(:q, :name_or_description_cont)), edit_subsystem_tag_path(subsystem_tag),  data: { turbo_frame: :form, action: "click->tags#highlight" }  %>
        </div>
        <div class="text-xs/6 text-zinc-500">
          <%= highlight(subsystem_tag.description, params.dig(:q, :name_or_description_cont)) %>
        </div>
        <div class="text-xs/6 text-zinc-600">
        </div>
      </div>
    </div>
    <div class="flex items-center gap-4">
      <%= render_dropdown_menu do %>
        <%= dropdown_menu_trigger do %>
          <span class="text-zinc-900 dark:text-white">
            <%= render_icon :more %>
          </span>
        <% end %>

        <%= dropdown_menu_content do %>
          <%=
            dropdown_menu_item do
              link_to "Modify", edit_subsystem_tag_path(subsystem_tag), class: "block w-full text-sm",  data: { turbo_frame: :edit_form }
            end
          %>
        <% end %>
      <% end %>
    </div>
  </div>
</li>
