<%= turbo_stream.append :subsystem_tags do %>
  <%= render @subsystem_tags %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace :pagination do %>
      <%=
        turbo_frame_tag(
          :pagination,
          loading: :lazy,
          src: subsystem_tags_path(format: :turbo_stream, page: @pagy.next, q: params[:q]&.to_unsafe_h)
        )
      %>
  <% end %>
<% end %>
