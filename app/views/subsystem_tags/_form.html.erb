<%= simple_form_for(@subsystem_tag, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@subsystem_tag) %></h3>
    </div>
    <div class='box-body'>
      <%= f.input :name %>
      <%= f.input :description , as: :text, input_html: { class: 'textarea' } %>
    </div>  
    <%= render_form_button(f) %>
  </div>
<% end %>
