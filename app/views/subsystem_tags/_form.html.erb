<%= simple_form_for(@subsystem_tag, role: 'form', html: { class: 'form-horizontal record-form' }) do |f| %>
  <%= f.error_notification %>
  <%= form_header(@subsystem_tag) %>
  <%= f.input :name %>
  <%= f.input :description , as: :text, input_html: { class: 'textarea' } %>  
  <%= render_form_button(f) %>
<% end %>
