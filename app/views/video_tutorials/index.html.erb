 <div class="box">
  <div class="box-header">
    <%= link_to "New Video Tutorial", new_video_tutorial_path, class: 'btn btn-primary' %>
  </div>
  <div class='box-body no-padding'>
  <%= table_for @video_tutorials, :table_html => { :class => "table table-striped" },
                        :sortable => false,
                        :data_row_html => {
                          :xclass => lambda { cycle('success', 'error', 'warning', 'info')},
                          :id => lambda { |video_tutorial| "video_tutorial-#{video_tutorial.id}" }
                        } do |table| %>
    <% table.column :name %>
    <% table.column :description, :formatter => lambda { |description| Nokogiri::HTML(description).text} %>
    <% table.column :data => "Show", :link => true %>
    <% table.column :data => "Modify", :link_action => :edit %>
    <% table.column :data => "Delete", :link_method => :delete, :link_confirm => "Are you sure?" %>
    <% table.footer do %>
      <div class="pull-right">
        <%= paginate @video_tutorials %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
