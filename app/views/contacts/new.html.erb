<div class="relative isolate overflow-hidden h-screen">
  <div class="text-left mt-10 ml-10">
    <%= 
      link_to(
        "< Back", 
        root_path, 
        class: 'text-lg font-semibold leading-6 text-white bg-teal-900 hover:bg-teal-700 px-4 py-2 rounded', 
        data: { turbo: false }
      )
    %>
  </div>
  <div class="absolute left-[calc(50%-4rem)] top-10 -z-10 transform-gpu blur-3xl sm:left-[calc(50%-18rem)] lg:left-48 lg:top-[calc(50%-30rem)] xl:left-[calc(50%-24rem)]" aria-hidden="true">
    <div class="aspect-[1108/632] w-[69.25rem] bg-gradient-to-r from-[#80caff] to-[#4f46e5] opacity-20" style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)"></div>
  </div>
  <div class="mx-auto max-w-7xl px-6 pb-16 pt-8 sm:pb-16 lg:flex lg:px-8 lg:pt-40">
    <div class="mx-auto max-w-2xl flex-shrink-0 lg:mx-0 lg:max-w-xl lg:pt-8">
      <%= image_tag 'logo-small.png', class: 'h-16 w-auto', alt: "Logo for the 'Tool for Systemic Change'" %>
      <h1 class="mt-10 text-4xl font-bold tracking-tight text-white sm:text-6xl">Obsekio</h1>
      <h2 class="mt-10 text-3xl font-bold tracking-tight text-white sm:text-4xl">Tell us about your project</h2>
      <p class="mt-6 text-lg leading-8 text-gray-300">
        Talk to us about your project. What changes are you trying to achieve? What are the challenges you face? How can we help?
      </p>
    </div>

    <div class="h-fit bg-white/10 p-8 rounded-lg mx-auto w-full ml-14 mt-8">
      <%= form_with(model: @contact, local: true, data: { turbo: false }) do |form| %>
        <%= recaptcha_v3(action: 'contact') %>
        <div class="space-y-6">
          <div class="mt-2">
            <%= form.label :name, 'Contact name', class: 'text-white dark:text-white' %>
            <div class="mt-2">
              <%= form.text_field :name, class: 'text-white dark:text-white w-full focus:ring-amber-500 ', autofocus: true %>
            </div> 
          <div>

          <div class="mt-4">
            <%= form.label :email, 'Contact email', class: 'text-white dark:text-white' %>
            <div class="mt-2">
              <%= form.email_field :email, class: 'text-white dark:text-white w-full focus:ring-amber-500' %>
            </div>
          <div>  

          <div class="mt-4">
            <%= form.label :message, class: 'text-white dark:text-white' %>
            <div class="mt-2">
              <%= form.text_area :message, class: 'text-white dark:text-white w-full focus:ring-amber-500 h-48' %>
            </div>
          <div> 
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
          <%= link_to 'Cancel', root_path, class: "text-sm/6 font-semibold text-gray-200 dark:text-gray-700" %>
          <%= form.submit 'Post', class: 'bg-teal-900 dark:bg-teal-900 hover:bg-teal-700 dark:hover:bg-teal-700' %>
        </div>

      <%- end %>
    </div>
  </div>
</div>