<p id="notice"><%= notice %></p>

<h1>Focus Areas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @focus_areas.each do |focus_area| %>
      <tr>
        <td><%= link_to 'Show', focus_area %></td>
        <td><%= link_to 'Edit', edit_focus_area_path(focus_area) %></td>
        <td><%= link_to 'Destroy', focus_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Focus Area', new_focus_area_path %>
