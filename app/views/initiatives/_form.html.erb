<%= simple_form_for(@initiative, role: 'form', html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <div class='box box-primary'>
    <div class='box-header with-border'>
      <h3 class='box-title'><%= form_title(@initiative) %></h3>
    </div>
    <div class='box-body'>
      <%= f.input :name, required: true  %>
      <%= f.input :description %>
      <%= f.association :scorecard, collection: policy_scope(Scorecard), label: '<p>fasdfs</p>'.html_safe, required: true %>
      <hr>
      <%= render 'scorecards/form_tabs/organisations', form: f %>
      <hr>
      <%= f.input :started_at %>
      <%= f.input :finished_at %>
      <hr>
      <%= f.input :contact_name %>
      <%= f.input :contact_email %>
      <%= f.input :contact_website %>
      <%= f.input :contact_position %>
    <div class='box-footer'>
      <%= f.button :submit, inpuclass: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
