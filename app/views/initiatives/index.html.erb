<%= render 'labels/stylesheet', labels: @subsystem_tags %>
<%= render 'expiry_warning' %>
<div class="mx-auto max-w-6xl">
  <div class="flex flex-wrap items-end justify-between gap-4">
    <div class="w-full">
      <h1 class="text-2xl/8 font-semibold text-zinc-950 sm:text-xl/8 dark:text-white">
        <%= Initiative.model_name.human.pluralize %>
      </h1>
      <div class="flex justify-between items-center mt-4 ">
        <%= render partial: 'search_form', locals: { record: @q, placeholder: "Search #{Initiative.model_name.human.pluralize.downcase}..." } %>
        <div class="flex justify-end items-center mb-4 space-x-2">        
          <%= 
            link_to_primary("Export", initiatives_path(format: :csv), data: { turbo_stream: false })
          %>
          <%- if policy(Initiative).create? %>
            <%=
              link_to_primary("Import", import_initiatives_path)
            %>
          <%- end %>
          <%- if policy(Initiative).create? %>
            <div>
              <%= link_to_primary "Create #{Initiative.model_name.human}", new_initiative_path %>
            </div>
          <%- end %>
        </div>
      </div>
    </div>
    <ul class="w-full divide-y divide-gray-200 dark:divide-gray-700">
      <%= turbo_frame_tag :list do %>
        <%= render @initiatives %>
        <%= render partial: 'pagination' %>
      <% end %>
    </ul>
  </div>
</div>
