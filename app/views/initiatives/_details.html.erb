<div class="tab-pane" id="details-tab">
  <%= simple_form_for(@initiative, role: 'form', html: { class: 'form-horizontal' } ) do |f| %>
    <%= f.error_notification %>
    <div class='box box-primary'>
      <div class='box-header with-border'>
        <h3 class='box-title'><%= form_title(@initiative) %></h3>
      </div>
      <div class='box-body'>
        <%= f.input :name %>
        <%= f.input :description %>
        <%#= f.association :scorecard, collection: policy_scope(Scorecard), required: true %>
        
        <%= f.association :scorecard, 
          collection: policy_scope(Scorecard), 
          required: true, 
          label: safe_join(
            [
              content_tag(:span, 'Scorecard', style: 'margin-right: 10px'),
              link_to(
                content_tag(
                  :i, 
                  '', 
                  class: "fa fa-external-link"
                ), 
                scorecard_path(@initiative.scorecard), 
                id: 'initiative-detail-scorecard-link'
              )
              
            ]
          ),
          input_html: { class: 'initiative-detail-scorecard' }
        %>
        <hr>
        <%= render 'scorecards/form_tabs/organisations', form: f %>
        <hr>
        <%= f.input :started_at %>
        <%= f.input :finished_at %>
        <hr>
        <%= f.input :contact_name %>
        <%= f.input :contact_email %>
        <%= f.input :contact_website %>
        <%= f.input :contact_position %>
      </div>

      <div class='box-footer'>
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
