  <div class="tab-pane" id="details-tab">
    <%= simple_form_for(@initiative, role: 'form', html: { class: 'form-horizontal' } ) do |f| %>
      <%= f.error_notification %>
      <div class='box box-primary'>
        <div class='box-header with-border'>
          <h3 class='box-title'><%= form_title(@initiative) %></h3>
        </div>
        <div class='box-body'>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :started_at %>
          <%= f.input :finished_at %>
          <%= f.input :contact_name %>
          <%= f.input :contact_email %>
          <%= f.input :contact_website %>
          <%= f.input :contact_position %>
          <%= render 'scorecards/form_tabs/organisations', form: f %> <%# NOTE Cannot create and assign new %>
        </div>

        <div class='box-footer'>
          <%= f.button :submit, inpuclass: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
