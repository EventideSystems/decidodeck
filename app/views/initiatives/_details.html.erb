<div class="tab-pane" id="details-tab">
  <%= simple_form_for(@initiative, role: 'form', html: { class: 'form-horizontal' } ) do |f| %>
    <%= f.error_notification %>
    <div class='box box-primary'>
      <div class='box-header with-border'>
        <h3 class='box-title'><%= form_title(@initiative) %></h3>
      </div>
      <div class='box-body'>
        <%= f.input :name %>
        <%= f.input :description %>
        <%#= f.association :scorecard, collection: policy_scope(Scorecard), required: true %>
        
        <%= f.association :scorecard, 
          collection: policy_scope(Scorecard), 
          required: true, 
          label: scorecard_label(@initiative),
          input_html: { class: 'initiative-detail-scorecard' }
        %>
        <hr>
        <%= render 'scorecards/form_tabs/organisations', f: f %>
        <%= render 'scorecards/form_tabs/subsystem_tags', f: f %>
       
        <%= f.input :started_at, :as => :string, :input_html => { data: { behaviour: "datepicker" }} %>
        
        <%= f.input :finished_at, :as => :string, :input_html => { data: { behaviour: "datepicker" }} %>
        <hr>
        <%= f.input :contact_name %>
        <%= f.input :contact_email %>
        <%= f.input :contact_website %>
        <%= f.input :contact_position %>

        <hr>
        <%= f.input :notes %>
      </div>

      <div class='box-footer'>
        <%= f.button :submit, class: 'btn btn-primary float-right' %>
      </div>
    </div>
  <% end %>
</div>
