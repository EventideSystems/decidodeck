<li>
  <hr
    role="presentation"
    class="w-full border-t border-zinc-950/10 dark:border-white/10"
  />
  <div class="flex items-center justify-between">
    <div class="flex gap-6 py-6">
      <%= render partial: 'resource_summary', locals: { name: scorecard.name, background_color: 'bg-cyan-600' } %>
      <div class="space-y-1.5">
        <div class="text-base/6 font-semibold dark:text-white">
          <%= link_to highlight(scorecard.name, params.dig(:q, :name_or_description_cont)), scorecard_path(scorecard), data: { turbo: false } %>
        </div>
        <div class="text-xs/6 text-zinc-500">
          <%= highlight(scorecard.description, params.dig(:q, :name_or_description_cont)) %>
        </div>
        <div class="text-xs/6 text-zinc-600">
          <%= scorecard&.name.presence || 'MISSING' %>
        </div>
      </div>
    </div>
  </div>
</li>

