  <%= 
    f.input \
      :subsystem_tag_id, 
      collection: lookup_subsystem_tags, 
      prompt: 'Select a Subsystem Tag', 
      label: "Select Existing", 
      input_html: { class: 'assign-subsystem-tag-select' } 
  %>

