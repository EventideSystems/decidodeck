<%- if policy(:sidebar).show_subsystem_tags_link? %>
  <div class="row">
  <label class="col-sm-3 control-label select">Assign Subsystem Tags</label> 
  <div class="col-md-9">
  
  <%= form.nested_fields_for :initiatives_subsystem_tags do |io| %>
    <div class="box box-solid">   
      <div class="box-body"> 
        <div class="col-md-7 pull-left"> 
          <%= 
            io.input :subsystem_tag_id, 
              collection: lookup_subsystem_tags, 
              prompt: 'Select a Subsystem Tag', 
              label: "Select Existing", 
              input_html: { class: 'assign-subsystem-tag-select' } 
          %>
        </div>
        <div class="pull-left"> 
          <strong>Or</strong>&nbsp;&nbsp;<%= link_to "Create a New Subsystem Tag", new_subsystem_tag_path, remote: true, class: "btn btn-secondary subsystem-tag-link" %>
        </div>
        <div class="pull-right"> 
          <%= io.remove_nested_fields_link do %>
            <button type="button" class="btn btn-box-tool pull-right"><i class="fa fa-remove"></i></button>
          <% end %>
        </div>  
      </div>
    </div>
  <% end %>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-9">  
    <%= form.add_nested_fields_link :initiatives_subsystem_tags, 'Assign Another Subsystem Tag', class: 'btn btn-secondary pull-left assign-another-subsystem-tag hidden' %>
  </div>
  </div>
  <hr>
<% end %>
