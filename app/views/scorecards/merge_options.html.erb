<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">Ã—</span></button>
  <h4 class="modal-title">Merge Scorecard</h4>
</div>
<div class="modal-body">

  
<%= bootstrap_form_tag url: merge_scorecard_url(@scorecard),  method: "post" do |f| %>
  <div class="modal-body">
    <%= f.text_field :target_scorecard, value: @scorecard.name, readonly: true %>
    <p>
      
    </p>
    <div>
      <%= f.select(
            :other_scorecard_id, 
            Scorecard.where.not(id: @scorecard.id).collect {|s| [ s.name, s.id ] },
            label: "Scorecard to merge", multiple: true
          ) 
      %>
    </div>
    
  </div class="form-group select required">
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= f.submit 'Merge Scorecards', class: 'btn btn-secondary' %>
  </div>
<% end %>
      
</div>
<div class="modal-footer hidden">
  <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
</div>