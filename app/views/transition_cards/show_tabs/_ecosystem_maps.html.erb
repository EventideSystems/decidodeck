<div class="box-body" id="ecosystem-maps" data-scorecard-id="<%=@scorecard.id%>" data-controller="ecosystem-maps">
  <nav class="navbar nav-pills navbar-expand-md justify-content-md-left justify-content-start">
    <div class="navbar-collapse collapse justify-content-left align-items-left w-100" id="collapsingNavbar2">
      <ul class="navbar-nav nav-tabs mr-auto text-md-center text-left">
        <li class="nav-item">
          <a class="nav-link" href="#" data-action="click->ecosystem-maps#toggleLabels" data-target="ecosystem-maps.toggleLabels">
            Labels
          </a> 
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#" data-action="click->ecosystem-maps#toggleLegend" data-target="ecosystem-maps.toggleLegend">
            Legend
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#" data-action="click->ecosystem-maps#zoomIn" data-target="ecosystem-maps.toggleLegend">
            <i class="fa fa-plus" aria-hidden="true"></i>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#" data-action="click->ecosystem-maps#zoomOut">
            <i class="fa fa-minus" aria-hidden="true"></i>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="#" data-action="click->ecosystem-maps#zoomReset">
            Reset
          </a>
        </li>
      </ul>
      <ul id="ecosystem-maps-nav" class="d-none nav nav-tabs navbar-nav flex-row justify-content-md-center justify-content-start flex-nowrap">
        <li class="nav-item">
          <a href="#tab_organisations" class="nav-link active" data-target="#tab_organisations" data-toggle="tab">
            Organisations
          </a>
        </li>
        <li class="nav-item">
          <a href="#tab_initiatives" class="nav-link" data-target="#tab_initiatives" data-toggle="tab">
            Initiatives
          </a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="tab-content">
    <div class="tab-pane active" id="tab_organisations">
      <div id="organisations-chart" class="chart" width="100%" height='100%' style="overflow:hidden;">
        <svg width="960" height="900"></svg>
      </div>

      <div class="legend pt-3">
        <%- Sector.order(:name).each do |sector| -%>
          <p>
            <span class="dot" style="background-color: <%= sector.color.presence || '#000' %>"></span> 
            <span class="dot-label"><%= sector.name %></span>
          </p>
        <%- end %>  
      </div>
    </div>

    <div class="tab-pane" id="tab_initiatives">
      <div id="initiatives-chart" class="chart" width="100%" height='100%' style="overflow:hidden;">
        <svg width="960" height="900"></svg>
      </div>
    </div>
  </div>
</div>
