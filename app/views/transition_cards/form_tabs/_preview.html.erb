            <%= 
              link_to(
                content_tag(
                  :i, 
                  '', 
                  class: "fa fa-external-link"
                ),
                nil,
                remote: true,
                onclick: "$('.wizard').smartWizard('goToStep', 1);"
              )
            %>  
