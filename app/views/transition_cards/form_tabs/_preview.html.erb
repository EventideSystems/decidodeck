          <h4><%= Scorecard.model_name.human %>
          <%= 
            link_to(
              content_tag(
                :i, 
                '', 
                class: "fa fa-external-link"
              ),
              nil,
              remote: true,
              onclick: "$('.wizard').smartWizard('goToStep', 0);"
            )
          %>
          <strong id='preview-scorecard-name'></strong></h4>
        </div>
        <div class="row preview-row">
          <p id='preview-scorecard-description'></p>
          
